
@import "../../common/header.wxss";


page{
  background-color: #eeeeee;
  flex:9999;
}
.page{
   /* border-top: 96rpx solid #eeeeee; */
}
scroll-view{ 
  flex-direction: column;
  display: flex;
  flex: -9999;  
}
.navigator
{
  background-color: white;
  margin-top: 20rpx; 
  flex: 5;
}
.navigator .head{ 
  border-bottom: 2rpx solid #eeeeee;
  border-top: 2rpx solid #eeeeee;
  line-height:80rpx;
  margin-bottom:20rpx;
}
.navigator .head label{
  font-size: 32rpx; 
  height: 80rpx; 
}
.navigator .head .waybill_no{  
  margin-left: 40rpx; 
  color: #a2a2a2;
}
.navigator .head .waybill_sta{ 
  float: right;
  margin-right: 40rpx;
}
.navigator .region{
  margin-left: 30px;
  color: red;
}
.navigator .waybill_content{
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
}
.navigator .waybill_content .goods_img{
  height: 200rpx;
  width: 200rpx;
}
.navigator .waybill_content text{
   display: block;
   font-size: 28rpx;
   padding: 5rpx;
   color: #434343;
   font-weight: bold;
}
.navigator .waybill_content .waybill_text{
  margin-left: 30rpx;
  flex:1;

}
.bottom{
  padding: 30rpx;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #a2a2a2;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.loading{
  display: flex;
  justify-content: center; 
}

