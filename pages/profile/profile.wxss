/* pages/profile/profile.wxss */ 
page{
   background-color: #efeff4;
   width: 100%;
   height: 100%;
}

.view_head{ 
  background: #6e86b3;
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #eee;
}
 .view_head .head_img{
  height: 200rpx;
  width: 200rpx;
}


 .view_head text{
   display: block;
   font-size: 48rpx;
   padding: 5rpx;
   color: white; 
}
.view_head .head_text{
  margin-left: 30rpx; 
  flex:1;
}
.content_view{
  border-top: 2rpx solid #d3d3d3;
  margin-top: 40rpx; 
  align-items: center;
}
.content_view .content_item {
  height: 120rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #d3d3d3;
}
.content_item .item_img
{
  padding: 40rpx 20rpx;
  width: 80rpx;
  height: 80rpx;
}
.content_item text{ 
  margin-left: 20rpx;
}
.log_out_btu
{
  position:  absolute;
  width: 100%;
  bottom : 0rpx;
}
.pull_img{
  height: 50rpx;
  width: 25rpx;
  position: absolute;
  right: 20rpx;
}